// tp8_2 dev c++

#include<stdlib.h>
#include<stdio.h>
#include<iostream>
#include<string>
#include<conio.h>

using namespace std;

int fn_entrada();
int fn_proceso(int n_1, int n_2);
void fn_salida(int n_1, int n_2, int resultado);

main()
{
	
	cout<<("\n*** Programacion en Lenguaje C                                                                 ***");
    cout<<("\n*** TP08_EJ02                                                                                  ***");
    cout<<("\n*** Calcular la suma de dos  numeros ingresados                                                ***");
    cout<<("\n------------------------------------------------------------------------------------------------\n");
    
    
    int n_1 = 0;
	int n_2 = 0;
	int resultado;
	
    n_1 = fn_entrada();

	n_2 = fn_entrada();

	resultado = fn_proceso(n_1, n_2);

	fn_salida(n_1, n_2, resultado);
	
}

//ingresar de los numeros

int fn_entrada(){
	int valor;
	cout << "Ingrese un numero: " << endl;
	cin >> valor;
return valor;	
}


//proceso

int fn_proceso(int n_1, int n_2){

return n_1 + n_2;
}
    
//mostrar resultado

void fn_salida(int n_1, int n_2, int resultado){
	
	cout<<"La suma de los numeros ingresados es: "<<resultado<<endl;
	
		
cout<<("\n------------------------------------------------------------------------------------------------\n");
cout<<("\n***                           -------          FIN          -------                            ***");
}   

