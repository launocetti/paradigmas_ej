// tp7_3 dev c++

#include<stdlib.h>
#include<stdio.h>
#include<iostream>
#include<string>
#include<conio.h>

using namespace std;

main()
{
	
	int precio=0,cantidad=0,cant_prod=0,i=0;
	float porcentaje=0, impuesto=0, precio_final_total=0 , precio_final=0, total=0;

cout<<("\n--------------------------------------------------------------------------------------------------");
cout<<("\n*** Programacion en Lenguaje C                                                                 ***");
cout<<("\n*** TP07_EJ03                                                                                  ***");
cout<<("\n*** Ingresa por teclado cantidad de productos y suma total de ventas                           ***");
cout<<("\n------------------------------------------------------------------------------------------------\n");

	
	cout<<"Ingrese cantidad de productos"<<endl;
	cin>>cant_prod;
	
	for (i=1 ; i<=cant_prod ; i++) {
	    cout<<"Ingrese el precio del producto: "<<i<<endl;
 	    cin>>precio;
 	    
	    cout<<"cantidad de unidades: "<<i<<endl;
	    cin>>cantidad;
	
	    cout<<"procentaje de impuesto sobre el producto: "<<i<<endl;
	    cin>>porcentaje;
	
	    impuesto=precio*porcentaje/100;
	    precio_final=precio+impuesto;
	    precio_final_total=precio_final*cantidad;
	    
	    total=total+precio_final_total;
	    
	
    }
	    
	    cout<<"Precio final por producto "<<precio_final<<endl;
	    
	    cout<<"Precio final de la compra total: "<<total<<endl;
	
	return 0;
}
	
