#include<string>
#include<conio.h>

using namespace std;
 
int main () 
{
	int num_inicial =0
	int cant_veces =0
	int prox_num =0
	int cant =0
	
	
	cout<<("EScriba el primer valor")<<endl;
	cin>>num_inicial;

	cout<<("EScriba la cantidad de valores a mostrar")<<endl;
	cin>> cant_veces;
		
	while (cant< cant_veces)
	cant = cant+1;
		
	cout<<prox_num<<endl;
	prox_num=prox_num+1;
		
}
