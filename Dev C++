// tp6_1 dev c++

#include<stdlib.h>
#include<stdio.h>
#include<iostream>
#include<string>
#include<conio.h>

using namespace std;

main()
{
    int n1, n2;

    cout<<("digite el primer numero: "); 
	cin>>n1;
    cout<<("digite el segundo numero: "); 
	cin>>n2;
 

    if(n1==n2)
       cout<< "Los numeros ingresados son iguales ";

    else if(n1>n2)
       cout<<"El mayor numero es: " <<n1;

    else if(n2>n1)
        cout<<"El mayor numero es: " <<n2;



    return 0;
}

