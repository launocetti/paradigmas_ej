// tp7_1 dev c++

#include<stdlib.h>
#include<stdio.h>
#include<iostream>
#include<string>
#include<conio.h>

using namespace std;

main()
{
	int segundos=0, minutos=0, horas=0, min_seg=0, horas_seg=0, tot_seg=0;
	
	
	cout<<("Ingresar cantidad de segundos: ");
	cin>>segundos;
	
	cout<<("Ingresar cantidad de minutos: ");
	cin>>minutos;
	
	cout<<("Ingresar cantidad de horas: ");
	cin>>horas;
	
	if (minutos%60==0);
	    min_seg=minutos*60;
	    
    if (horas%3600==0);
	    horas_seg=horas*3600;
	    
	tot_seg=horas_seg+min_seg+segundos;
	
	cout<<("El total equivalente en segundos es: ")<<tot_seg;
	
    return 0;
}
