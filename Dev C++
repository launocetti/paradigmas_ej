// tp8_3 dev c++

#include<stdlib.h>
#include<stdio.h>
#include<iostream>
#include<string>
#include<conio.h>

using namespace std;

void fn_entrada(int& horas, int& min, int& seg); 
int fn_proceso(int horas, int min, int seg);
void fn_salida(int horas, int min, int seg, int tot_seg);

main()
{
	
int tiempo[3];
int seg=0;
int min=0;
int horas=0;
int tot_seg=0;


	cout<<("\n*** Programacion en Lenguaje C                                                                 ***");
    cout<<("\n*** TP08_EJ03                                                                                  ***");
    cout<<("\n*** Pasar tiempo (horas, minutos y segundos) a segundos                                        ***");
    cout<<("\n------------------------------------------------------------------------------------------------\n");
    

    fn_entrada(horas,min, seg);

	tot_seg=fn_proceso(horas,min,seg);
	
	fn_salida(horas,min,seg,tot_seg);
	
	return 0;
	
}

//ingreso de datos

void fn_entrada(int& horas, int& min, int& seg){
	cout<<("Ingresar cantidad de horas: ");
	cin>>horas;
	
	cout<<("Ingresar cantidad de minutos: ");
	cin>>min;
	
	cout<<("Ingresar cantidad de segundos: ");
	cin>>seg;
}
//proceso


int fn_proceso(int horas, int min, int seg){

    return (horas*3600)+(min*60)+seg;
}

//resultado

void fn_salida(int horas, int min, int seg, int tot_seg){

    cout<<"El total equivalente de "<<horas<<" horas , "<<min<<" minutos , "<<seg<<" y segundos,  en segundos es : "<<tot_seg<<endl;
    
    	
cout<<("\n------------------------------------------------------------------------------------------------\n");
cout<<("\n***                           -------          FIN          -------                            ***");
}
