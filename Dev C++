// tp7_2 dev c++

#include<stdlib.h>
#include<stdio.h>
#include<iostream>
#include<string>
#include<conio.h>

using namespace std;

main()
{
	char ape_nomb[30], producto[30];
	int precio=0,cantidad=0;
	float porcentaje=0, impuesto=0, precio_final_total=0 , precio_final=0;
	
	cout<<("Ingrese Apellido y Nombre del comprador: ");
	cin>>ape_nomb;
	
	cout<<("Ingrese el producto: ");
	cin>>producto;
	
	cout<<("Ingrese el precio del producto: ");
	cin>>precio;
	
	cout<<("cantidad de unidades: ");
	cin>>cantidad;
	
	cout<<("procentaje de impuesto sobre el producto: ");
	cin>>porcentaje;
	
	impuesto=precio*porcentaje/100;
	precio_final=precio+impuesto;
	precio_final_total=precio_final*cantidad;
	
	cout<<("Comprador: ")<<ape_nomb<<endl;
	cout<<("Producto: ")<<producto<<endl;
	cout<<("Precio: ")<<precio<<endl;
	cout<<("Cantidad: ")<<cantidad<<endl;
	cout<<("Impuesto: ")<<porcentaje<<endl;
	cout<<("Precio final por unidad: ")<<precio_final<<endl;
	cout<<("Precio final de la compra total: ")<<precio_final_total<<endl;
	
	    return 0;
}
	
