// tp7_6 dev c++

#include <stdio.h>
#include <iostream>
#include <string>
#include <conio.h>
#include <stdlib.h>
using namespace std;

main()
{

string suc[10];
string ger[10];
double ventas[10];
double total;
double promedio=0;
int  cs=0, x=0;

cout<<("\n--------------------------------------------------------------------------------------------------");
cout<<("\n*** Programacion en Lenguaje C                                                                 ***");
cout<<("\n*** TP07_EJ06                                                                                  ***");
cout<<("\n*** Ingresa por teclado Nombre de las sucursales definidas, gerente y ventas                   ***");
cout<<("\n*** TP07_EJ06_mod                                                                              ***");
cout<<("\n------------------------------------------------------------------------------------------------\n");

 
{
    cout<< "Ingrese Cantidad de sucursales a habilitar (maximo 10) : " << endl ; 
    cin >> cs;
}
    while(cs>10 or cs<=0);
	{
    cout<< "Vuelva a ingresar la Cantidad de sucursales a habilitar (maximo 10) : " << endl ; 
    cin >> cs;
    cout <<("\n");
}
for (x=0;x<cs;x++)
{
    cout<< "Ingrese Nombre sucursal " <<x+1<< " : "<<endl; 
    cin.ignore();
	getline(cin, suc[x]);
    cout <<("\n");
    cout<<"Ingrese Nombre del Gerente de la sucursal " <<suc[x]<<" : "<<endl;
    getline(cin, ger[x]);
    cout <<("\n");
    cout<<"Ingrese ventas de la sucursal ultimo aÃ±o " <<suc[x]<<" : "<<endl;
	cin>>ventas[x];
	cout <<("\n");
	total=total+ventas[x];
}
    
	promedio=total/x;

    cout<<("\n------------------------------------------------------------\n");
    cout<< "Las sucursales ingresadas son: "  << endl ;
    for (x=0;x<cs;x++)
{
    cout<<"Sucursal " << x+1 << " : " << suc[x] << " Gerente: " << " : " << ger[x]<<endl ;
    cout<<"Ventas del ultimo anio: " << " : " << ventas[x]<<endl;
	cout<<"el total de ventas del las sucursales es "<< " : " << total<<endl;
    cout<<"el promedio de ventas de las sucursales es "<< " : " << promedio<<endl;
}
    cout<<("\n------------------------------------------------------------\n");

return 0;

}

