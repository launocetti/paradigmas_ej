// tp7_4 dev c++

#include<stdlib.h>
#include<stdio.h>
#include<iostream>
#include<string>
#include<conio.h>

using namespace std;

main()
{
	int vec[5];
	int valor;
	int valor_mayor=0;
	int posicion=0;
	int suma=0;
	int valor_prom=0;
	
cout<<("\n--------------------------------------------------------------------------------------------------");
cout<<("\n*** Programacion en Lenguaje C                                                                 ***");
cout<<("\n*** TP07_EJ04                                                                                  ***");
cout<<("\n*** Ingresa por teclado vector de 5 posiciones, hallar mayor valor, promedio y posicion        ***");
cout<<("\n------------------------------------------------------------------------------------------------\n");


	for (int i=0;i<5;i++){
		cout <<"Ingrese los valores del vector:  "<<endl;
		cin >> valor;
		vec[i] = valor;
    }
	
	valor_mayor = vec[0];
	posicion = 0+1;

	for(int i=0;i<5;i++){
		suma= suma+vec[i];
		if (vec[i]>valor_mayor){
			valor_mayor = vec[i];
			posicion=i+1;
		}
	}	
	
	valor_prom=suma/5;

	

cout<<("\n------------------------------------------------------------------------------------------------\n");	

cout<< "-- El mayor valor de los numeros del vector es: " <<endl;
cout<<valor_mayor<<endl;

cout<<"-- En la posicion: "<<endl;
cout<<posicion<<endl;

cout<<"-- El valor promedio de los numeros del vector es: "<<endl;
cout<<valor_prom<<endl;

cout<<("\n------------------------------------------------------------------------------------------------\n");
cout<<("\n***                           -------          FIN          -------                            ***");

	
return 0;
}

